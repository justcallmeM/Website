@{
    ViewData["Title"] = "Gallery";
}

<!--Basically a list of photos, that serve as thumbnail>
<!--Trigger, open modal-->
<div class="gallery">
    <img src="~/images/img1.jpg" onclick="openModal();currentSlide(1)">
    <img src="~/images/img2.jpg" onclick="openModal();currentSlide(2)">
    <img src="~/images/img3.jpg" onclick="openModal();currentSlide(3)">
    <img src="~/images/img4.jpg" onclick="openModal();currentSlide(4)">
    <img src="~/images/img5.jpg" onclick="openModal();currentSlide(5)">
    <img src="~/images/img6.jpg" onclick="openModal();currentSlide(6)">
    <img src="~/images/img7.jpg" onclick="openModal();currentSlide(7)">
    <img src="~/images/img8.jpg" onclick="openModal();currentSlide(8)">
</div>

<div id="myModal" class="modal">
    <span class="close cursor" style="color:white; margin-right:300px" onclick="closeModal()">&times;</span>
    <div class="modal-content">

        <div class="mySlides">
            <img src="~/images/img1.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img2.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img3.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img4.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img5.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img6.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img7.jpg" style="width:100%" class="modalimage">
        </div>

        <div class="mySlides">
            <img src="~/images/img8.jpg" style="width:100%" class="modalimage">
        </div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <div class="caption-container">
        <p id="caption"></p>
    </div>


    <div class="liteGallery">

        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img1.jpg" style="width:100%; height: 100%" onclick="currentSlide(1)" alt="Description 1">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img2.jpg" style="width:100%; height: 100%" onclick="currentSlide(2)" alt="Description 2">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img3.jpg" style="width:100%; height: 100%" onclick="currentSlide(3)" alt="Description 3">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img4.jpg" style="width:100%; height: 100%" onclick="currentSlide(4)" alt="Description 4">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img5.jpg" style="width:100%; height: 100%" onclick="currentSlide(5)" alt="Description 5">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img6.jpg" style="width:100%; height: 100%" onclick="currentSlide(6)" alt="Description 6">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img7.jpg" style="width:100%; height: 100%" onclick="currentSlide(7)" alt="Description 7">
        </div>
        <div class="liteGalleryItem">
            <img class="demo cursor" src="~/images/img8.jpg" style="width:100%; height: 100%" onclick="currentSlide(8)" alt="Description 8">
        </div>

    </div>
</div>
